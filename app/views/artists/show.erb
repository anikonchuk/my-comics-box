<h2><%= @artist.name %></h2>
<h3>Comics</h3>
<ul>
  <% @artist.comics.sort_by {|obj| obj.name}.each do |comic| %>
    <li><a href="/comics/<%=comic.id%>"><%= comic.name %></a></li>
  <% end %>
</ul>
<h3>Writers</h3>
<ul>
  <% @artist.writers.sort_by {|obj| obj.name}.uniq.each do |writer| %>
    <li><a href="/writers/<%=writer.id%>"><%= writer.name %></a></li>
  <% end %>
</ul>
